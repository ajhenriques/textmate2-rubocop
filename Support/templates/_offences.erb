      <a href="<%= url_to(f,o.line, o.real_column) %>" title="<%= o.severity %>">
        <%= o.message %>
      </a>
      <span class="cop_name"><%= o.cop_name %></span>
      <%= '<span class="auto-corrected">âœ“</span>' if o.corrected? %>
    </li>
  <% end %>
</ol>
